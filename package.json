{
	"name": "portfolio",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"format": "prettier --single-quote --write 'src/**/*'",
		"format:check": "prettier --single-quote --check 'src/**/*'",
		"lint": "eslint \"src/**/*.{js,ts}\" --quiet --fix",
		"lint:check": "eslint \"src/**/*.{js,ts}\" --quiet",
		"check": "yarn run format:check && yarn run lint:check",
		"check:fix": "yarn run format && yarn run lint"
	},
	"dependencies": {
		"apollo-server-micro": "^2.18.1",
		"dotenv": "^8.2.0",
		"graphql": "^15.3.0",
		"isomorphic-unfetch": "^3.1.0",
		"next": "9.5.3",
		"react": "16.13.1",
		"react-dom": "16.13.1",
		"eslint": "^7.9.0",
		"prettier": "^2.1.2",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0"
	},
	"devDependencies": {
		"@types/node": "^14.11.2",
		"@types/react": "^16.9.49",
		"typescript": "^4.0.3",
		"eslint": "^7.8.1",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-config-wesbos": "^1.0.0",
		"eslint-plugin-html": "^6.1.0",
		"eslint-plugin-import": "2.20.0",
		"eslint-plugin-jsx-a11y": "6.2.3",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-react": "7.18.0",
		"eslint-plugin-react-hooks": "1.7.0",
		"husky": "^4.3.0",
		"prettier": "^2.1.1",
		"prettier-eslint": "^11.0.0"
	},
	"husky": {
		"hooks": {
			"pre-push": "yarn lint:check && yarn format:check"
		}
	}
}
